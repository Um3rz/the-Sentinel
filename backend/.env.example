# VibeChecker Backend Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration (Neon PostgreSQL)
# Get your connection string from: https://neon.tech
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/vibechecker

# Google Gemini API Key (required)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# GitHub Token for repository access and PR creation (optional for public repos)
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# GitHub OAuth (optional, for GitHub login)
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# JWT Secret (generate a secure random string)
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application Settings
APP_ENV=development
DEBUG=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000
